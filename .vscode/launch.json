{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "TORAX Debugger: Run TORAX with the active config",
            "type": "debugpy",
            "request": "launch",
            "module": "torax.run_simulation_main",
            "args": [
                "--config",
                "${file}"
            ],
            "env": {
                "JAX_DISABLE_JIT": "True"
            },
            "console": "integratedTerminal"
        }
    ]
}
